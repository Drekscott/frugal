<!DOCTYPE html>
<html>
  <head>
    <title>Frugal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="container">
          <%= render 'shared/header' %>
          <% flash.each do |key, value| %>
              <div class="flash_message">
                  <%= key %>, <%= value %>
          <% end %>
          <%= yield %>
      </div>
  </body>
</html>
